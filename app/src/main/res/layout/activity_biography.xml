<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BiographyActivity"
    android:background="@color/black_fondo">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="601dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="vertical"></LinearLayout>

                <TextView
                    android:id="@+id/el_ateneo_id"
                    android:layout_width="362dp"
                    android:layout_height="35dp"
                    android:text="        EL ATENEO"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/espacio_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="20dp"
                    android:text="ESPACIO DE TECNOLOGÍAS APLICADAS"
                    android:textAlignment="textStart"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/tecnologias_aplicadas_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="TECNOLOGÍAS UTILIZADAS"
                    android:textAlignment="center"
                    android:textColor="#0CB0F7"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="40dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/logo_react_mobile" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/logo_firebase_mobile" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/android_studio_mobile" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/logo_java_mobile" />
                </LinearLayout>

                <!-- Aca ingresar logos de react, firebase y otro-->
            </LinearLayout>


            <TextView
                android:id="@+id/nameKarla_id"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/nameKarla_id"
                android:textAlignment="textStart"
                android:textColor="#0CB0F7"
                android:textSize="20sp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="37dp"
                    android:layout_height="270dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:foregroundGravity="top"
                    app:srcCompat="@drawable/foto_karla" />

                <TextView
                    android:id="@+id/bioKarla_id"
                    android:layout_width="281dp"
                    android:layout_height="220dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="@string/bioKarla_id"
                    android:textAlignment="textEnd"
                    android:textColor="@color/green_ligth_atn"
                    android:textSize="16sp">

                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/nameLucia_id"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/nameLucia_id"
                android:textAlignment="textEnd"
                android:textColor="#0CB0F7"
                android:textSize="20sp">

            </TextView>

            <LinearLayout
                android:layout_width="409dp"
                android:layout_height="220dp"
                android:layout_gravity="start"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bioLucia_id"
                    android:layout_width="286dp"
                    android:layout_height="220dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="@string/bioLucia_id"
                    android:textAlignment="textStart"
                    android:textColor="@color/green_ligth_atn"
                    android:textSize="16sp">

                </TextView>

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="98dp"
                    android:layout_height="220dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/foto_lucia" />

            </LinearLayout>

            <TextView
                android:id="@+id/nameTobias_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="TOBIAS CASTAÑEDA"
                android:textAlignment="textStart"
                android:textColor="#0CB0F7"
                android:textSize="20sp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="153dp"
                    android:layout_height="220dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/foto_tobias" />

                <TextView
                    android:id="@+id/bioTobias_id"
                    android:layout_width="261dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="@string/bioTobias_id"
                    android:textAlignment="textEnd"
                    android:textColor="@color/green_ligth_atn"
                    android:textSize="16sp">

                </TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/nameBelen_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="BELEN TORRES"
                android:textColor="#0CB0F7"
                android:textSize="20sp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bioBelen_id"
                    android:layout_width="265dp"
                    android:layout_height="220dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="@string/bioBelen_id"
                    android:textAlignment="textStart"
                    android:textColor="@color/green_ligth_atn"
                    android:textSize="16sp">

                </TextView>

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="171dp"
                    android:layout_height="220dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/foto_belen" />

            </LinearLayout>

            <TextView
                android:id="@+id/nameGabriel_id"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="GABRIEL TCRAK"
                android:textAlignment="textStart"
                android:textColor="#0CB0F7"
                android:textSize="20sp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="114dp"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/foto_gabi" />

                <TextView
                    android:id="@+id/bioGabriel_id"
                    android:layout_width="277dp"
                    android:layout_height="220dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:text="@string/bioGabriel_id"
                    android:textAlignment="textEnd"
                    android:textColor="@color/green_ligth_atn"
                    android:textSize="16sp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>