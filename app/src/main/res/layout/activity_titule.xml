<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_fondo"
    tools:context=".TituleActivity">

    <TextView
        android:id="@+id/txt_elAteneo"
        android:layout_width="171dp"
        android:layout_height="44dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="251dp"
        android:layout_marginBottom="613dp"
        android:text="@string/txt_el_ateneo"
        android:textColor="@color/green_ligth_atn"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_espacio"
        android:layout_width="323dp"
        android:layout_height="180dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="522dp"
        android:fontFamily="@font/montserrat_thin"
        android:text="@string/txt_espacio"
        android:textColor="@color/green_ligth_atn"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_elAteneo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_tenologias"
        android:layout_width="236dp"
        android:layout_height="36dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="268dp"
        android:layout_marginBottom="336dp"
        android:text="@string/txt_tecnologies"
        android:textColor="@color/blue_ligth_atn"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.174"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>